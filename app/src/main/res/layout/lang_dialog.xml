<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/color_white"
    >


    <TextView
        android:textColor="#C8000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plz_select_lang"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:fontFamily="@font/fofo12"
        android:layout_marginBottom="20dp"
        android:id="@+id/textView" />

    <RadioGroup
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RadioButton
            android:text="العربية"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_arabic"
            />

        <RadioButton
            android:text="English"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_english" />

    </RadioGroup>


    <!--android:layout_marginStart="20dp"-->
    <!--android:layout_marginEnd="20dp"-->
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_weight="1"
            android:layout_width="0dp"
            xmlns:fancy="http://schemas.android.com/apk/res-auto"
            android:paddingBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:paddingTop="10dp"
            android:id="@+id/ok_button"
            fancy:fb_borderColor="@color/colorPrimary"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            fancy:fb_focusColor="@color/colorPrimaryDark"
            fancy:fb_radius="30dp"
            fancy:fb_text="@string/ok"
            fancy:fb_textColor="#FFFFFF" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_weight="1"
            android:layout_width="0dp"
            xmlns:fancy="http://schemas.android.com/apk/res-auto"
            android:paddingBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:paddingTop="10dp"
            android:id="@+id/cancel_button"
            fancy:fb_borderColor="@color/colorPrimary"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#00000000"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            fancy:fb_focusColor="@color/colorPrimaryDark"
            fancy:fb_radius="30dp"
            fancy:fb_text="@string/cancel"
            fancy:fb_textColor="@color/colorPrimary" />




    </LinearLayout>




</LinearLayout>
