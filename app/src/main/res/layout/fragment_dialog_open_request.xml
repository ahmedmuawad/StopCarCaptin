<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:minWidth="100000dp"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"

    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true"
     tools:context=".fragment.DialogOpenRequestFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:minWidth="100000dp"

        android:padding="16dp">


        <TextView
            android:id="@+id/statFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="@string/from"
            android:textColor="#454545"
            android:textSize="14sp" />


        <TextView
            android:background="@drawable/gender"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:layout_marginTop="10dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/location1"
            android:layout_width="match_parent"
            android:text="location1"
            android:textColor="#454545"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="@string/to"
              android:textColor="#454545"
            android:textSize="14sp" />


        <TextView
            android:background="@drawable/gender"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/location2"
            android:layout_marginTop="10dp"
            android:text="location2"
            android:layout_width="match_parent"
            android:textColor="#454545"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/typesGoods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="@string/type_of_good"
              android:textColor="#454545"
            android:textSize="14sp" />


        <TextView
            android:background="@drawable/gender"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/type_of_good"
            android:text="Good"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textColor="#454545"
            android:textSize="16sp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="@string/notes"
              android:textColor="#454545"
            android:textSize="14sp" />



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true">


            <TextView
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="text text text text text text text text text text text text text text "
                  android:textColor="#454545"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/stat_rdod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="@string/rodod_numb"
              android:textColor="#454545"
            android:textSize="14sp" />

        <TextView
            android:background="@drawable/gender"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/rodod"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textColor="#454545"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/priceLin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"

                android:layout_weight="1" android:paddingTop="5dp"
                android:text="@string/your_price"
                  android:textColor="#454545"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                          android:textColor="#454545"
                        android:textSize="16sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:id="@+id/send"
                fancy:fb_borderColor="@color/colorPrimary"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="@color/colorPrimary"
                fancy:fb_radius="30dp"
                fancy:fb_text="@string/send"
                fancy:fb_textColor="@color/white"
                />
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/cancel"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                fancy:fb_borderColor="@color/colorPrimary"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#007ab800"
                fancy:fb_focusColor="@color/colorPrimary"
                fancy:fb_radius="30dp"
                fancy:fb_text="@string/cancel"
                fancy:fb_textColor="@color/colorPrimary"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">






            <ProgressBar
                android:id="@+id/progress"
                android:visibility="invisible"
                android:layout_width="40dp"
                 android:layout_gravity="center"
                android:layout_height="40dp" />
        
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>