<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <include layout="@layout/layout_back"></include>

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/cu"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/whatsapp_c"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />


                <TextView

                    android:textColor="@color/black"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="center"
                    android:textSize="19sp"
                    android:id="@+id/whatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/web_c"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />


                <TextView

                    android:textColor="@color/black"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="center"
                    android:textSize="19sp"
                    android:id="@+id/web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/envelope_c"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />


                <TextView

                    android:textColor="@color/black"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="center"
                    android:textSize="19sp"
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/smartphone_c"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />


                <TextView

                    android:textColor="@color/black"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="center"
                    android:textSize="19sp"
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/placeholder_c"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />


                <TextView

                    android:textColor="@color/black"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="center"
                    android:textSize="19sp"
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <mehdi.sakout.fancybuttons.FancyButton
                xmlns:fancy="http://schemas.android.com/apk/res-auto"
                android:paddingBottom="15dp"
                android:layout_marginTop="25dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="15dp"
                android:id="@+id/requestBtn"
                android:onClick="chatNow"
                fancy:fb_borderColor="@color/colorPrimary"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                fancy:fb_focusColor="@color/colorPrimaryDark"
                fancy:fb_radius="10dp"
                fancy:fb_text="@string/chat_now"
                fancy:fb_textColor="#FFFFFF" />
        </LinearLayout>




    </LinearLayout>


    <ProgressBar
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>