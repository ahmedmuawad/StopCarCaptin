<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stopgroup.stopcar.captain.activity.PaymentActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/f1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:scaleType="centerCrop"
            android:src="#63000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#5E000000"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="9dp"
                app:srcCompat="@drawable/ic_back" />

            <TextView
                android:layout_marginStart="6dp"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/login"
                android:textColor="@color/color_white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:background="#5E000000"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:text="@string/this_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/priceTxt"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:textSize="22sp"
                android:text="@string/this_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:elevation="4dp"
        android:layout_marginTop="-40dp"

        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_gravity="center"
            android:layout_width="100dp"
            app:srcCompat="@drawable/profileuser"
            android:layout_height="100dp"
            app:tint="@color/white" />

        <TextView
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/gender"
            android:gravity="center"
            android:id="@+id/btnPaymentDetails"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/graydark"
            android:text="@string/payment_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:backgroundTint="@color/white"
            android:background="@drawable/gender"
            android:gravity="center"
            android:id="@+id/btnRecentTransactions"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/graydark"
            android:text="@string/recent_transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:backgroundTint="@color/white"
            android:background="@drawable/gender"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/btnMakeTransAction"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/graydark"
            android:text="@string/make_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>




</FrameLayout>
