<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stopgroup.stopcar.captain.activity.RequestPaymentActivity">
<include layout="@layout/layout_back"/>
    <TextView
        android:visibility="gone"
        android:padding="10dp"
        android:id="@+id/date"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/fofo11"
            android:layout_marginTop="10dp"
            android:text="@string/balance"
            android:textColor="#606060"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/balance"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:id="@+id/date2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <mehdi.sakout.fancybuttons.FancyButton
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/requestBtn"
        android:layout_margin="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        fancy:fb_borderColor="@color/colorPrimary"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#007ab800"
        fancy:fb_focusColor="@color/colorPrimary"
        fancy:fb_radius="30dp"
        fancy:fb_text="@string/send_to_admin"

        fancy:fb_textColor="@color/colorPrimary"
        />



<ProgressBar
    android:layout_marginTop="10dp"
    android:visibility="gone"
    android:id="@+id/progress"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

</LinearLayout>
