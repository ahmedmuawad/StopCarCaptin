<FrameLayout
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/c6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:scaleType="centerCrop"
            android:src="#63000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.stopgroup.stopcar.captain.Activity.AdActivity">

    <include layout="@layout/layout_back"
        android:visibility="gone"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_weight="1.3"
        android:id="@+id/viewPager"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"></androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"


        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/title"
            android:textSize="16sp"
            android:text="@string/welcome_to_nashmi"
            android:textColor="@color/color_white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/desc"
            android:textSize="15sp"
            android:text="Titleeeeee"
            android:textColor="#99FFFFFF"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


   <LinearLayout
       android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
       android:layout_marginTop="70dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <mehdi.sakout.fancybuttons.FancyButton
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="5dp"
           android:layout_marginTop="15dp"
           android:layout_marginEnd="5dp"
           android:paddingLeft="20dp"
           android:paddingTop="10dp"
           android:paddingRight="20dp"
           android:paddingBottom="10dp"
           android:id="@+id/login"
           fancy:fb_borderColor="@color/colorPrimary"
           fancy:fb_borderWidth="1dp"
           fancy:fb_defaultColor="@color/colorPrimary"
           fancy:fb_focusColor="@color/colorPrimary"
           fancy:fb_radius="30dp"
           fancy:fb_text="@string/login"
           fancy:fb_textColor="@color/white"
           />
       <mehdi.sakout.fancybuttons.FancyButton
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="5dp"
           android:layout_marginTop="10dp"
           android:layout_marginEnd="5dp"
           android:id="@+id/register"
           android:paddingLeft="20dp"
           android:paddingTop="10dp"
           android:paddingRight="20dp"
           android:paddingBottom="10dp"
           fancy:fb_borderColor="@color/color_white"
           fancy:fb_borderWidth="1dp"
           fancy:fb_defaultColor="#007ab800"
           fancy:fb_focusColor="@color/color_white"
           fancy:fb_radius="30dp"
           fancy:fb_text="@string/register"
           fancy:fb_textColor="@color/color_white"
           />
   </LinearLayout>


    </LinearLayout>
</LinearLayout>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>
