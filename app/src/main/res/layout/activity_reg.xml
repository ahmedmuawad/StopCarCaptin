<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <include layout="@layout/layout_back" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"

                android:orientation="vertical">


                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:visibility="gone"
                            android:layout_width="60dp"
                            android:layout_gravity="center"
                            android:layout_height="60dp"
                            android:layout_marginBottom="15dp"

                            />
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get Started !"
                            android:fontFamily="@font/alaf4"
                            android:textColor="@color/colorPrimary"
                            android:textSize="35sp" />

                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginEnd="5dp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="First Name"
                                    android:fontFamily="@font/fofo12"
                                    android:textColor="#494949"
                                    android:textSize="15sp" />
                                <EditText
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/firstname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/firstname"
                                    android:textColor="@color/cardview"
                                    android:textColorHint="@color/gray" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginEnd="5dp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Last Name"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/fofo12"
                                    android:textColor="#494949"
                                    android:textSize="15sp" />
                                <EditText
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/lastname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/lastname"
                                    android:textColor="@color/cardview"
                                    android:textColorHint="@color/gray" />

                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/fofo12"
                            android:textColor="#494949"
                            android:textSize="15sp" />
                        <EditText
                            android:id="@+id/email"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/cardview"
                            android:textColorHint="@color/gray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/fofo12"
                            android:textColor="#494949"
                            android:textSize="15sp" />
                        <EditText
                            android:hint="@string/password"
                            android:id="@+id/password"
                            android:inputType="textPassword"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cardview"
                            android:textColorHint="@color/gray" />





                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/fofo12"
                        android:textColor="#494949"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spin"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"/>

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="phone"
                            android:textColor="@color/cardview"
                            android:textColorHint="@color/gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:layout_gravity="center"
                            android:checked="false"
                            android:id="@+id/checkBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:id="@+id/textPolicy"
                            android:text="@string/accept_policy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <mehdi.sakout.fancybuttons.FancyButton
                        xmlns:fancy="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/next"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="25dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        fancy:fb_borderColor="@color/colorPrimary"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="8dp"
                        fancy:fb_focusColor="@color/colorPrimaryDark"
                        fancy:fb_radius="30dp"
                        fancy:fb_text="@string/next"
                        fancy:fb_textColor="#FFFFFF" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="@string/forget_pass"
                        android:textColor="@color/gray" />
                </LinearLayout>



            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</LinearLayout>
